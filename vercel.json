{
    "version": 2,
    "functions": {
        "api/**/*": {
            "maxDuration": 20
        }
    },
    "routes": [
        {
            "src": "/(.*)",
            "dest": "api/index.py",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE",
                "OPTIONS"
            ]
        }
    ]
}
